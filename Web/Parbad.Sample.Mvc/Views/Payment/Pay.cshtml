@model Parbad.Sample.Shared.PayViewModel

<h1>Request</h1>

@using (Html.BeginForm("Pay", "Payment", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.TrackingNumber, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.TrackingNumber, new { @class = "form-control" })
    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(model => model.GenerateTrackingNumberAutomatically, new { @class = "form-check-input" })
        @Html.LabelFor(model => model.GenerateTrackingNumberAutomatically, new { @class = "control-label" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Amount, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SelectedGateway, new { @class = "control-label" })
        @Html.EnumDropDownListFor(model => model.SelectedGateway, new { @class = "form-control" })
    </div>
    <button class="btn btn-success">Pay</button>
}
