@model PayViewModel
@{
    ViewData["Title"] = "Pay";
}

<form asp-controller="Payment" asp-action="Pay" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TrackingNumber"></label>
        <input asp-for="TrackingNumber" class="form-control" placeholder="Tracking number">
        <span asp-validation-for="TrackingNumber" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" asp-for="GenerateTrackingNumberAutomatically">
        <label class="form-check-label" asp-for="GenerateTrackingNumberAutomatically"></label>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" placeholder="Amount">
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedGateway"></label>
        <select asp-for="SelectedGateway" asp-items="Html.GetEnumSelectList<Gateways>()" class="form-control">
            <option>Select a gateway...</option>
        </select>
        <span asp-validation-for="SelectedGateway" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Pay</button>
</form>
